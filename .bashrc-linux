#!/bin/bash
function apt-get()
{
    if test "$1" = source; then
        command apt-get "$@";
    else
        sudo apt-get "$@"
    fi
}

export PATH=/usr/local/jdk1.5/bin:/usr/local/arm-linux/bin:~/bin/linux/:~/bin/linux/ext:$PATH:~/bin/linux/ext/android-sdk-linux_86/tools
export CLASSPATH=/usr/local/jdk1.5/lib:~/bin/linux/ext/stringtemplate.jar:~/bin/linux/ext/antlr3.jar:~/bin/linux/ext/antlrworks.jar:.
export JAVA_HOME=/usr/local/jdk1.5

export XMODIFIERS="@im=SCIM"
export XIM=SCIM
export GTK_IM_MODULE=scim

alias aptitude='sudo aptitude'
alias sudo='sudo env PATH=$PATH'

if test -z "$SSH_CLIENT"; then
    export LOCALIP=localhost
    export LOCALPORT=22
    export REMOTEIP=localhost
    export PS1HostName=`hostname`
    export PS1='\n( \u@$PS1HostName [01;32m| \w |[0m [01;34mRemote[01;31m:[01;34mTrue[0m)\n\$'
fi

for x in host traceroute telnet
do 
    eval "function $x()
    {
        if test \$# = 1; then
            local h=\`echo \"\$1\"|perl -npe 's!.*//(.*?)/.*!\$1!'\`
            command $x \$h
        else
            command $x "\$@"
        fi
    }"
done
