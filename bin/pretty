#!/usr/bin/env perl

use strict;
use Getopt::Long;
use lib substr($0, 0, -length("/pretty"));
use pretty;

if (@ARGV) {
  for (@ARGV) {
    printf("%s %d 0x%08x\n", pretty(un_pretty($_)), un_pretty($_), un_pretty($_));
  }
} else {
  while (<>) {
    printf("%s %d 0x%08x\n", pretty(un_pretty($_)), un_pretty($_), un_pretty($_));
  }
}
