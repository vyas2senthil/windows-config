#!/bin/bash

set -e

if test $# -le 1; then
    die "Error: Usage $(basename $0) HOST"
fi
host=$1
shift

for x in $(
    if test $# != 0;
    then
        echo "$@";
    else
        echo .texmf-config .texmf-var .ssh .smbpass .edictrc .smb smbookmarks .netrc .authinfo .keystore /var/myca jira-users .confhttp .confkeys .confserv .confuser weekly
    fi
); do
    rsync -av $host:$x ~/
done

if test -d ~/myca; then
    sudo mv ~/myca /var
fi
