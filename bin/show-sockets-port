#!/bin/bash

for x in $(cat /proc/net/tcp | perl -npe 's/([a-f0-9]{8}):([a-f0-9]{4})/{$ip=eval("0x$1"); $port=eval("0x$2"); use Socket; inet_ntoa(pack("I", $ip)) . ":$port"; }/ieg'|grep :$1|pn 10); do

    for p in /proc/*/fd; do
        if sudo ls -l $p/ |grep -q -e "\b$x\b"; then
            p=${p#/proc/}
            p=${p%/*}
            ps.pl $p
        fi
    done
done


