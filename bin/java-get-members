#!/bin/bash

set -e
function die() {
    echo Error: "$@"
    exit -1
}

type='.*?'
TEMP=$(getopt -o t: --long type: -n $(basename $0) -- "$@")
eval set -- "$TEMP"
while true; do
    case "$1" in
        -t|--type)
        type=$2
        shift 2
        ;;
        --)
        shift
        break
        ;;
        *)
        die "internal error"
        ;;
    esac
done


for class in "$@"; do
    qclasses=$(java-get-qclass $class)

    for qclass in $qclasses; do
        file=$(java-find-def.pl -e $qclass)
        tag_cache=$(java-tags-cache $file)
        perl -ne "print \"\$1\n\" if m/$type: <$qclass.([^.>]*)>/" $tag_cache
    done
done | sort -u
