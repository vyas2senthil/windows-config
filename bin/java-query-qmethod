#!/usr/bin/perl

use strict;
for (@ARGV) {
    my $q_class = my $q_method = $_;
    $q_class =~ s/(.*)\..*/$1/;
    
    chomp(my $file = qx(java-find-def.pl -e $q_class));
    chomp(my $tags_cache = qx(java-tags-cache $file));

    system("grep -e '<$q_method>' $tags_cache|perl -npe 's/.*?</</'");
}
