#!/bin/bash
function die() {
    echo Error: "$@"
    exit -1
}

set -e
iface=eth0
test "$1" || die "Usage: $(basename $0) arp_host"
TEMP=$(getopt -o i: --long iface -n $(basename $0) -- "$@")
eval set -- "$TEMP"
while true; do
    case "$1" in
        -i|--iface)
        iface=$2
        shift 2
        ;;
        --)
        shift
        break
        ;;
        *)
        die "internal error"
        ;;
    esac
done


if test $(basename $0) = update-arp; then
    for host_name in "$@"; do

        arp=$(perl -a -ne  'if ($F[0] eq '"$host_name"') {print $F[1]}' ~/etc/arp-hosts)
        if test -z "$arp"; then
            die "can not find arp entry for $host_name"
        fi
        for ((x=0; x<100; x++)); do
            ip=$(sudo arping -i $iface -c 1 -r $arp | head -n 1 || true)
            if test -z "$ip"; then
                echo "can not arping $arp: $x"
            else
                break
            fi
        done
        echo ip is $ip
        sudo update-host-ip "$host_name" $ip
    done
    exit 0
fi

ssh "$1"
