#!/bin/bash

adapter_name_matcher='wlan0|eth0'
if test "${1:0:1}" != /; then
    adapter_name_matcher=${1:-wlan0|eth0} #empty matches all adapters
    shift
fi

ipconfig "$@" | tr -d '\r' |grep -v v6 -i | perl -ne '
if (m/^\S.*:$/) {
    if (m/'"$adapter_name_matcher"'/) {
        print;
        <>;
        print "\n";
        while(<>) {
            last if (m/^\s*$/);
            print;
        }
        print "\n";
    }
}
' | perl -npe 's/\(Preferred\)//'
