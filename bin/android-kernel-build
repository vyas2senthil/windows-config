#!/bin/bash

if test "$1" = uImage; then

    build_mount_p=~/src/.afb
    time sudo unshare -m -- bash -c '
        set -x
        mount $(lookup_file -r .repo/..) '$build_mount_p' -o bind;
        su '$(whoami)' -c "
            set -x
            cd '$build_mount_p'/kernel/kernel
            export KBUILD_OUTPUT=$(lookup_file -s out/target/product/*/kernel/kbuild*)
            PATH=$(lookup_file prebuilts/gcc/linux-x86/arm/arm-eabi-4.6/bin):$PATH ARCH=arm CROSS_COMPILE=\"/home/bhj/src/.afb/prebuilts/misc/linux-x86/ccache/ccache /home/bhj/src/android/prebuilts/gcc/linux-x86/arm/arm-eabi-4.6/bin/arm-eabi-\" make -j8 -k uImage
            cp \$KBUILD_OUTPUT/arch/arm/boot/uImage \$KBUILD_OUTPUT/../
            exit
        "
    '
    exit
fi


if test $# = 1; then
    export KERNEL_CONFIG=$1
fi

(cd $(lookup_file vendor/marvell/generic/tcmd/kernel-helper); time mm -j8 -k kernel)
