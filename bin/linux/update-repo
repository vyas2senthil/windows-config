#!/bin/bash
. ~/.bashrc

cd /git/android-x86
repo-switch -u git://android-x86.git.sf.net/gitroot/android-x86/manifest.git -b donut-x86
repo sync
repo-switch -u git://android-x86.git.sf.net/gitroot/android-x86/manifest.git -b eclair-x86
repo sync
repo-switch -u git://android-x86.git.sf.net/gitroot/android-x86/manifest.git -b froyo-x86

cd /git/android-nvidia
repo-switch -u git://nv-tegra.nvidia.com/android/manifest.git -b eclair-tegra
repo sync
repo-switch -u git://nv-tegra.nvidia.com/android/manifest.git -b froyo-tegra
repo sync
repo forall -c 'for x in `git tag`; do git branch tagbr-$x $x; done'

cd /git/android-google
repo-switch -u git://android.git.kernel.org/platform/manifest.git -b cupcake
repo sync
repo-switch -u git://android.git.kernel.org/platform/manifest.git -b donut
repo sync
repo-switch -u git://android.git.kernel.org/platform/manifest.git -b eclair
repo sync
repo-switch -u git://android.git.kernel.org/platform/manifest.git -b froyo
repo sync

cd /git/android-nvidia/linux-2.6.git
git config remote.origin.url git://android.git.kernel.org/kernel/common.git
git fetch origin 

#vendor/nvidia and hardware/tegra, we can do nothing, their git is maintained by us.

#git clone --mirror  git://android.git.kernel.org/tools/repo.git
cd /git/repo.git
git fetch
