#!/bin/bash
. ~/.bashrc
cd /git/android-google
repo init -u git://android.git.kernel.org/platform/manifest.git -b donut
repo sync
repo init -u git://android.git.kernel.org/platform/manifest.git -b eclair
repo sync
repo init -u git://android.git.kernel.org/platform/manifest.git -b froyo
repo sync

cd /git/android-x86
repo init -u git://android-x86.git.sf.net/gitroot/android-x86/manifest.git -b donut-x86
repo sync
repo init -u git://android-x86.git.sf.net/gitroot/android-x86/manifest.git -b eclair-x86
repo sync

cd /git/android-nvidia
repo init -u git://nv-tegra.nvidia.com/android/manifest.git -b eclair-tegra
repo sync
repo init -u git://nv-tegra.nvidia.com/android/manifest.git -b froyo-tegra
repo sync
repo forall -c 'for x in `git tag`; do git branch tagbr-$x $x; done'

cd /git/android-nvidia/linux-2.6.git
git fetch origin 
for x in `git tag`; do git branch tagbr-$x $x; done

cd /git/android-nvidia/3rdparty/atheros.git
git fetch origin
for x in `git tag`; do git branch tagbr-$x $x; done

#vendor/nvidia and hardware/tegra, we can do nothing, their git is maintained by us.

#git clone --mirror  git://android.git.kernel.org/tools/repo.git
cd /git/repo.git
git fetch
