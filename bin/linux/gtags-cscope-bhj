#!/bin/bash
#echo "-f cscope.out -d -L -7 /" "$@"
. ~/.bashrc
gtags_file=`lookup_file GTAGS`
last_gtags_file=
while test -f "$gtags_file" \
    -a ! -L "$gtags_file" \
    -a "$last_gtags_file" != "$gtags_file"; do
    last_gtags_file=$gtags_file
    lcd "$gtags_file" >/dev/null 2>&1
    echo "${5:1}${6}"|gtags-cscope|perl -npe 's/^>>.*//'
    cd ..
    gtags_file=`lookup_file GTAGS`
done
