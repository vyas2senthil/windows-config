#!/usr/bin/env perl

open($file, "<", glob("~/.bash_history"));
%hist_words={};
@hist_words=[];
while(<$file>) {
    while (m/((?:
               (?:"(?:\\.|[^\\])+?") |
 	       '.*' |
               (?:`(?:\\.|[^\\])+?`) |
               (?:\\.|[^"'\ \\|><\t\n])+
             )+)/xgi) {
        if (not $hist_words{$1}) {
            $hist_words{$1} = 1;
            push @hist_words, ($1);
        }
    }
}

@hist_matching_words = ();
foreach $key (@hist_words) {
    $key_matches = 1;
    foreach $arg (@ARGV) {
        if (index($key, $arg) == -1) {
            $key_matches = 0;
            last;
        }
    }
    if ($key_matches) {
        push @hist_matching_words, ($key) unless $key eq $ARGV[0];
    }        
}

@hist_matching_words = reverse @hist_matching_words;
for (1..@hist_matching_words) {
    $key = $hist_matching_words[$_-1];
    print "$_) $key\n";
}

print "#? ";
$ans = <STDIN>;
chomp($ans);
$ans = $hist_matching_words[$ans-1];
open($file, "|-", "putclip");
print $file "$ans\n";
