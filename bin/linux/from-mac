#!/bin/bash

case $(uname) in
    CYGWIN*)
	echo refs/heads/from-mac/$(ifconfig /all | tr -d '\r' | perl -ne 'if (m/eth\d+:\s*$/) 
{
    while (<>) {
        if (m/Physical Address.*:\s*(.*)/) {
            print lc($1);
            exit;
        }
    }
}')-$(hostname)-$(uname|perl -npe 's/_.*//')
	;;
    *)
	echo refs/heads/from-mac/`ifconfig|grep HWaddr|head -n 1|perl -npe 's/.*HWaddr //; s/:/-/g; s/\s//g;'`-`hostname`-$(uname)
	;;
esac
