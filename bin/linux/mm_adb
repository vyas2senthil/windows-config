#!/bin/bash
LOG=mm.$$
mm 2>&1|tee /tmp/$LOG
install_files=($(cat /tmp/$LOG|grep '^Install: '|perl -npe 's/.*: //'))
copy_files=($(cat /tmp/$LOG|grep -v '.ogg$'|grep "${1:-^Copy:}"|perl -npe 's/'"${1:-^Copy}"': //'))

for x in ${install_files[@]} ${copy_files[@]}; do
    y=`echo $x|perl -npe 's,out/target/product/.*?/,/,'`
    echo push $x '->' $y
    adb_push $x $y
done

