#!/bin/bash
test $# = 0 && set -- ""
for x in "$@"; do 
    rfa $x 'if git st -s |grep -q . || test $(git log -1 --pretty=oneline|pn 1) != $REPO_LREV; then pwd; fi '
done 2>&1 | (
    cd $(lookup_file .repo/..);
    log=./out/repo-changes.log"$(echo -n $*)"
    lognow="$log-$(now)"
    tee "$lognow" 2>/dev/null
    ln -sf $(basename "$lognow") "$log"
)
