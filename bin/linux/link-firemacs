#!/bin/bash
for x in ~/.mozilla/firefox/*/; do 
    dir="$x"/"extensions/{e98b7313-167d-48c6-89be-bc514d6de8d9}"
    rm -rf "$dir"
    mkdir -p "$dir"
    ln -sf ~/gcode/Firemacs/* "$dir"
    rm "$dir"/chrome.manifest
    cat <<End >"$dir"/chrome.manifest
overlay	chrome://browser/content/browser.xul	chrome://firemacs/content/statusbar.xul
content	firemacs	chrome/content/
skin	firemacs	classic/1.0	chrome/skin/
End
done
