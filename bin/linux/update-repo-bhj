#!/bin/bash
set -ex
. ~/.bashrc
cd /android

repo-switch -u git://android-x86.git.sf.net/gitroot/android-x86/manifest.git -b donut-x86
repo sync
repo-switch -u git://android-x86.git.sf.net/gitroot/android-x86/manifest.git -b eclair-x86
repo sync
repo-switch -u git://android-x86.git.sf.net/gitroot/android-x86/manifest.git -b froyo-x86
repo sync

repo-switch -u git://nv-tegra.nvidia.com/android/manifest.git -b eclair-tegra
repo sync
repo-switch -u git://nv-tegra.nvidia.com/android/manifest.git -b froyo-tegra
repo sync
repo-switch -u git://nv-tegra.nvidia.com/android/manifest.git -b gingerbread-tegra
repo sync

repo-switch -u git://android.git.kernel.org/platform/manifest.git -b cupcake
repo sync
repo-switch -u git://android.git.kernel.org/platform/manifest.git -b donut
repo sync
repo-switch -u git://android.git.kernel.org/platform/manifest.git -b eclair
repo sync
repo-switch -u git://android.git.kernel.org/platform/manifest.git -b froyo
repo sync
repo-switch -u git://android.git.kernel.org/platform/manifest.git -b gingerbread
repo sync
repo-switch -u ssh://bearr/android/platform/manifest.git -b theatre
repo sync
repo-switch -u ssh://bearr/android/platform/manifest.git -b theatre-p2
repo sync
repo-switch -u ssh://bearr/android/platform/manifest.git -b theatre-gb-p2
repo sync

cd /home/git/android/linux-2.6.git
git fetch origin 
git config remote.origin.url git://git.kernel.org/pub/scm/linux/kernel/git/torvalds/linux-2.6.git
git fetch origin
git config remote.origin.url git://android.git.kernel.org/kernel/common.git
git fetch origin 

cd /home/git/android/3rdparty/atheros.git
git fetch origin

#vendor/nvidia and hardware/tegra, we can do nothing, their git is maintained by us.

#git clone --mirror --bare  git://android.git.kernel.org/tools/repo.git
cd /android/repo.git
git fetch
echo ok, repo update complete
