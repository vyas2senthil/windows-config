#!/bin/bash

stop-vpn

. start-vpn
start_vpn_client

cat ~/.vpn_old_route|awk '
    (x++ < 2) {
        next
    };
    index($4, "H"){
        if (index($4, "G")) {
            print "sudo route add", $1, "gw", $2

        } else {
            print "sudo route add", $1, "dev", $8
        }
        next
    };
    {
        if (index($4, "G")) {
            print "sudo route add -net", $1, "netmask", $3, "gw", $2
        } else {
            print "sudo route add -net", $1, "netmask", $3, "dev", $8 # this is a net
        }
    }'|sh
