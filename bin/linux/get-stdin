#!/bin/bash
set -e

test $# = 0 -o $# = 1
tmp=/tmp/`basename $0`.$$
touch $tmp
if tty >/dev/null 2>&1; then
    test $# = 1 -a "$1" != $tmp && cat $1 > $tmp
else
    cat > $tmp
fi

edit-wait $tmp >/dev/null 2>&1
if test "`cat $tmp | wc -c`" == 0; then
    echo Error: input can not be empty 1>&2
    exec get-stdin
fi
cat $tmp

rm $tmp
