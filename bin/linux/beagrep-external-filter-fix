#!/bin/bash
sudo bash -c '

(echo "<external-filters>"

for x in $(cat <<EOF |grep "^text/"|awk "{print \$1}"
`cat /etc/mime.types`
text/xml xml
EOF
); do

for y in $(cat <<EOF |grep ^$x|awk "{\$1=\"\"; print}"
`cat /etc/mime.types`
text/xml xml
EOF
); do cat <<EOF
<filter>
  <mimetype>$x</mimetype>
  <extension>.$y</extension>
  <command>cat</command>
  <arguments>%s</arguments>
</filter>
EOF
done

cat <<EOF
<filter>
  <mimetype>$x</mimetype>
  <command>cat</command>
  <arguments>%s</arguments>
</filter>
EOF



done
echo "</external-filters>") > /etc/beagrep/external-filters.xml'
