#!/bin/bash
set -e

PROJECT=CINEMA

TEMP=`getopt -o p: --long project: -n jira-create-issue -- "$@"`
eval set -- "$TEMP"

while true; do
    case "$1" in
        -p|--project) PROJECT=$2; shift 2 ;;
        --) shift; break ;;
        *) echo "Internal error!" ; exit 1 ;;
    esac
done

summary=$1

function jira_create_issue_prefix() {
    jira -a createIssue --type Bug --assignee hjbao\:\ Haojun\ Bao  --project "$PROJECT" --components OS --summary "$@"
}

shift

tmp=/tmp/`basename $0`.$$

if test "$#" = 0; then
    jira_create_issue_prefix "$summary" --description "`get-stdin`"
else 
    jira_create_issue_prefix "$summary" --description "$(echo "$@")"
fi > $tmp
cd ~/jira-issues/

cat $tmp
touch `cat $tmp|pn 2`\:"$(echo "$summary"|perl -npe 's:(/|%):sprintf "%%%02x", ord($1):ge')"

