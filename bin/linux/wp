#!/bin/bash
function wp()
{
    FILE=${1:-`pwd`}
    FILE=`readlink -f "$FILE"`

    if [[ "$FILE" =~ ~/smb/ ]]; then
        FILE=`echo "$FILE"|perl -npe 's,^.*?/smb/,\\\\\\\\,; s,/,\\\\,g'`
    fi
    echo -n "$FILE"|tee /dev/tty|putclip
}

function up()
{
    FILE=${1:-`pwd`}
    FILE=`readlink -f "$FILE"`

    echo -n "$FILE"|tee /dev/tty|putclip
}

`basename "$0"` "$@"
