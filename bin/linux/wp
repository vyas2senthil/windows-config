#!/bin/bash

function smb_wp()
{
    FILE=${1:-`pwd`}
    FILE=`lookup_file "$FILE"`

    if [[ "$FILE" =~ ~/smb/ ]]; then
        FILE=`echo "$FILE"|perl -npe 's,^.*?/smb/,\\\\\\\\,; s,/,\\\\,g'`
    else
        FILE=z:$FILE
    fi
    echo -n "$FILE"|tee /dev/tty|putclip
}

function wp()
{
    FILE=${1:-`pwd`}
    FILE=`lookup_file "$FILE"`

    FILE=z:$FILE
    echo -n "$FILE"|tee /dev/tty|putclip
    history -s wp "$FILE"
}

function up()
{
    FILE=${1:-`pwd`}
    FILE=`lookup_file "$FILE"`

    echo -n "$FILE"|tee /dev/tty|putclip
    history -s up "$FILE"
}

if test "$BASH_SOURCE" = "$0"; then
    "`basename $0`" "$@"
fi
