#!/bin/bash
set -e
function compile_beagrep() {
    cd ~/gcode/beagrep
    git clean -xfd
    git fetch origin for-debian
    git checkout FETCH_HEAD
    autoreconf -i
    ./configure
    make
    sudo make install
}


function compile_uncomment_java() {
    cd ~/gcode/UncommentJava/
    make
    git clean -xfd
}

function compile_fcitx() {
    cd ~/gcode/fcitx/
    ./bootstrap
    ./configure
    make
    sudo make install
    git clean -xfd
}

function compile_ibus_sdim() {
    cd ~/gcode/ibus-sdim/
    ./autogen.sh
    ./configure --prefix=/usr
    make
    sudo make DESTDIR=/ install
    git clean -xfd
}

function compile_gtags() {
    cd ~/gcode/global/
    sh reconf.sh
    ./configure
    make
    sudo make install
    git clean -xfd

    cd ~/gcode/java-gtags-parser/
    make
    make clean
    git clean -xfd
}


function do_compile() {
    compile_beagrep "$@"
    compile_uncomment_java "$@"
    compile_gtags "$@"
    compile_ibus_sdim "$@"
}

`basename $0` "$@"
