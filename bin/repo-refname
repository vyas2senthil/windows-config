#!/bin/bash

if test -d "$1"; then
    cd $(lookup_file $1)
    repo-branch
    exit
fi

if test "$REPO_BRANCH"; then
    echo "$REPO_BRANCH"
    exit
fi

if test -z "$(lookup_file -e .repo)"; then
    branch=$(git symbolic-ref HEAD 2>/dev/null)
    if test -z "$branch"; then
        echo master
    else
        echo $branch|perl -npe 's,^refs/heads/,,'
    fi
    exit 0
fi
if test -z "$BPE_ON_APSE"; then
    if test "$REPO_INFO"; then
	$REPO_INFO branch
    else
	repo forall . -c 'echo $REPO_RREV'
    fi
else
    branch=$(git symbolic-ref BPE-LOCAL | perl -npe 's,.*/,,')
    if test "$branch"; then
	echo $branch
    else
	BPE_ON_APSE= $0
    fi
fi
