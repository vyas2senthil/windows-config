#!/bin/bash

case $(uname) in 
    Darwin)
        ifconfig | grep -B 1 -P -e '^\s+ether\s+'|perl -ne '
            if (m/^p2p\d+:/) {
                $p2p = 1;
            } elsif (m/^\w+:/) {
                $p2p = 0;
            } elsif (m/^\s+ether\s+([a-f0-9:]+)/i) {
                print $1 unless $p2p
            } '
        ;;
    Linux)
        ifconfig|grep HWaddr|grep -v usb
        ;;
    CYGWIN*)
        ifconfig /all | tr -d '\r' | perl -ne 'if (m/eth\d+:\s*$/) 
            {
                while (<>) {
                    if (m/Physical Address.*:\s*(.*)/) {
                        print lc($1);
                        exit;
                    }
                }
            }'
        ;;
esac |head -n 1|
perl -npe 's/.*HWaddr //; s/:/-/g; s/\s//g; $_ = lc $_'
