#!/bin/bash

function my_select() 
{
    local y=1
    if test $# = 1; then
        echo 1
        return
    fi
    for x in "$@"; do 
        echo $y\) "$x" >/dev/tty;
        ((y++))
    done

    read -p "#?" NUM
    if [[ x"$NUM" = x || ! "$NUM" =~ ^[1-9][0-9]*$ ]] || (( "$NUM" > $# )); then
        NUM=1
    fi
    echo $NUM
}

my_select "$@"
