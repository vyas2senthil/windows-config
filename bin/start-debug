#!/bin/bash
set -e

function die() {
    echo "$@"
    exit -1
}

test $# = 1 || die "Error: Usage $(basename $0) CMD"

if test "$1" != "$(basename $1)"; then
    die "cmd must be a basename, no dir part allowed"
fi

cmd=$(which $1)
if test "$cmd" = "$(readlink -f ~/bin/Linux/ext/debug/$1)"; then
    die "already set up debugging for $1"z..
fi

mkdir -p ~/bin/Linux/ext/debug
cat <<EOF > ~/bin/Linux/ext/debug/$1
#!/bin/bash
mkdir -p ~/.logs/start-debug.log/

(
    printf "cd %q;" "$(pwd)"

    for x in "$1" "\$@"; do
        printf "%q " "\$x" 
    done
    echo
) >> ~/.logs/start-debug.log/$1
$cmd "\$@" > ~/.logs/start-debug.log/$1.out 2> ~/.logs/start-debug.log/$1.err
res=\$?
cat ~/.logs/start-debug.log/$1.out
cat ~/.logs/start-debug.log/$1.err 1>&2

(echo out; cat ~/.logs/start-debug.log/$1.out; echo err:; cat ~/.logs/start-debug.log/$1.err) >>  ~/.logs/start-debug.log/$1
exit \$res
EOF
chmod +x ~/bin/Linux/ext/debug/$1
