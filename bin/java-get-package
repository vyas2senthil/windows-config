#!/bin/bash

set -e
function die() {
    echo Error: "$@"
    exit -1
}

if test "$#" != 1; then
    die "Error: Usage $(basename $0) java_file"
fi

if echo "$1"|grep -q -P -e '\.jar$|\.dll$'; then
    exit 0;
fi

p=$(global-ctags '.*' "$1" | grep -P -e 'package:\t' | pn 1)
if test -z "$p"; then
    exit 0;
else
    echo $p.
fi
