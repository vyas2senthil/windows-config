#!/bin/bash

function exit() {
    if test $1 = 0; then
	echo yes 1>&2
    else
	echo no 1>&2
    fi
    builtin exit $@
}

default=no
prompt=(yes/No)
if test "$1" = -y; then
    default=yes;
    prompt=(Yes/no)
    shift
fi

user_prompt=$(echo -n "$@")
if test "${user_prompt:0-1}" != '?'; then
    user_prompt=${user_prompt}\?
fi

if ! tty >/dev/null 2>&1; then
    test $default = yes && exit 0
    exit -1
fi

read -p "$user_prompt $prompt: "

if test -z "$REPLY" -a $default = yes; then
    exit 0
fi

if echo $REPLY|grep '^yes$' -iq; then
    exit 0
fi
exit -1
