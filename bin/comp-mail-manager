#!/usr/bin/perl

use strict;

my %mail_map;
my %manager_map;

sub debug(@) {
    print STDERR "@_\n";
}

sub get_manager(@)
{
    my ($indent, @args) = @_;

    open(my $out, "-|", ("comp-mail", @args, "--", "manager")) or
	die "can not open comp-mail pipe";

    while (<$out>) {
	#"Xin Qian" <xqian@marvell.com>:
	#(manager: CN=Gu\, Gavin,OU=Workers,DC=marvell,DC=com)
	print $_;

	if (m/^\(manager: (CN=.*?(?<!\\)),/) {
	    my $cn = $1;
	    $cn =~ s,\\,,g;
	    get_manager($indent + 2, "($cn)");
	}
    }
    close($out);
}

get_manager(0, @ARGV);
