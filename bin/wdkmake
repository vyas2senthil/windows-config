#!/bin/bash
export PATH="$PATH":.
mkdir /c/tmp -p
config='chk x86 WXP'
if [[ "$1" == '-c' ]]; then
    shift
    config="$1"
    shift
fi
echo 'call C:\WinDDK\6001.18002\bin\setenv.bat C:\WinDDK\6001.18002\' "$config">/c/tmp/$$.bat
echo echo on >> /c/tmp/$$.bat
cygpath -alw .|sed -e 's/:.*/:/' >> /c/tmp/$$.bat
(echo -n cd\ ; cygpath -awl .) >> /c/tmp/$$.bat

echo '%*' >> /c/tmp/$$.bat
'cmd.exe' /c "c:/tmp/$$.bat" "$@"

if [[ $DEBUG == 'y' ]]; then
    true;
    echo -e '\n****************'
    echo /c/tmp/$$.bat
    cat /c/tmp/$$.bat
else
    rm /c/tmp/*.bat
fi
