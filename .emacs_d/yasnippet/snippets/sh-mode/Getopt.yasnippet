# -*- mode: snippet -*-
# name: Getopt
# --
TEMP=\$(getopt -o ${1:j:} --long ${2:jobs:} -n \$(basename \$0) -- "\$@")
eval set -- "\$TEMP"
while true; do
    case "\$1" in
	${3:-j|--jobs})
	    ${4:jobs}=\$2
	    shift 2
	    ;;
	--)
	    shift
	    break
	    ;;
	*)
	    die "internal error"
	    ;;
    esac
done