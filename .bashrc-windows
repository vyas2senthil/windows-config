#!/bin/bash

function lw () {
         cygpath -alw "$@"
}

function SetPath()
{
    local paths
    paths=(
        /c/TeXLive2007/dviout
        /h/bin/win32
        /c/gs/gs8.54/bin
        /c/Perl/bin
        /c/Perl/site/bin
        /c/Python25/
        /c/Python25/Lib/site-packages/PyQt4
        /c/Python25/Lib/site-packages/PyQt4/
        ~/bin
        ~/bin/windows
        ~/bin/windows/redirect
        ~/bin/windows/emacs-graphics
        ~/bin/windows/gnuserv
        "/c/program files/imagemagick-6.4.9-q16"
        /usr/X11R6/bin
        /usr/bin
        /sbin
        /usr/local/bin
        /usr/sbin
        /usr/x11r6/bin
        /c/WINDOWS
        /c/WINDOWS/System32/Wbem
        /c/WINDOWS/system32
        "/c/Program Files/TortoiseSVN/bin"
    )

    unset PATH
    for x in "${paths[@]}"; do
        export PATH="$PATH":"$x"
    done
    
    unset SetPath
}

if [[ -d /q ]]; then
   export HOME=/q
   SetPath
   return 0
else 
     export HOME=/qq
     SetPath
     return 1
fi

#Open Containing folder..
function oc()
{
    cygstart explorer.exe /n,/select,\""`cygpath -alw \"$1\"`"\"
}
