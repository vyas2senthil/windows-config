#!/bin/bash

function lw () {
         cygpath -alw "$@"
}

function SetPath()
{
    local paths
    paths=(
        /c/TeXLive2007/dviout
        /c/gs/gs8.54/bin
        /c/Perl/bin
        /c/Perl/site/bin
        /c/Python25/
        /c/Python25/Lib/site-packages/PyQt4
        /c/Python25/Lib/site-packages/PyQt4/
        "/c/Program Files/Java/jdk1.6.0_13/bin/"
        ~/bin/windows/lnks
        ~/bin
        ~/bin/windows
        ~/bin/windows/redirect_vc6
        ~/bin/windows/redirect_cyg
        ~/bin/windows/emacs-graphics
        ~/bin/windows/gnuserv
        "/c/program files/imagemagick-6.4.9-q16"
        /usr/X11R6/bin
        /usr/bin
        /sbin
        /usr/local/bin
        /usr/sbin
        /usr/x11r6/bin
        /c/WINDOWS
        /c/WINDOWS/System32/Wbem
        /c/WINDOWS/system32
        "/c/Program Files/TortoiseSVN/bin"
    )

    unset PATH
    for x in "${paths[@]}"; do
        #cygwin-1.7 will behave weirdly if /h is mounted but the
        #texlive disk is not inserted
        [[ -e "$x" ]] && export PATH="$PATH":"$x"
    done
    PATH="${PATH:1}" #remove the beginning `:'
    unset SetPath
}

#Open Containing folder..
function oc()
{
    cygstart `which explorer.exe` /n,/select,\""`cygpath -alw \"$1\"`"\"
}

function svn-info-clip()
{
    svn info "$1" |grep '^URL:'|grep svn:.* -o|tr -d '\r' > /dev/clipboard
}

function of()
{
    if which "$1" >/dev/null 2>&1; then
        if [[ "$1" == of ]]; then
            local file=`which cygstart`
        else
            local file="`which \"$1\"`"
        fi
        shift
        cygstart "$file" "$@"
    else
        cygstart "$@"
    fi
}

alias or=regopen.py #open registry

function svn-check()
{
    svn st --no-ignore|grep '^\?'|grep '\.cpp$\|\.h$\|\.c$' -i
}

export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
alias regrep.py='regrep.py 2>/dev/null'
alias ps='ps aux -W'

if [[ -d /q ]]; then
   export HOME=/q
   SetPath
   return 0
else 
     export HOME=/qq
     SetPath
     return 1
fi

