#!/bin/bash

function lw () {
         cygpath -alw "$@"
}

function SetPath()
{
    local paths
    paths=(
        /cygdrive/c/Python25/
        /cygdrive/c/Python25/Lib/site-packages/PyQt4
        /cygdrive/c/Python25/Lib/site-packages/PyQt4/
        "/cygdrive/c/Program Files/Java/jdk1.6.0_13/bin/"
        ~/bin/windows/lnks
        ~/bin
        ~/bin/windows
        ~/bin/windows/redirect_vc6
        ~/bin/windows/redirect_cyg
        ~/bin/windows/emacs-graphics
        ~/bin/windows/gnuserv
        "/cygdrive/c/program files/imagemagick-6.4.9-q16"
        /usr/X11R6/bin
        /usr/bin
        /sbin
        /usr/local/bin
        /usr/sbin
        /usr/x11r6/bin
        /cygdrive/c/WINDOWS
        /cygdrive/c/WINDOWS/System32/Wbem
        /cygdrive/c/WINDOWS/system32
        "/cygdrive/c/Program Files/TortoiseSVN/bin"
    )

    unset PATH
    for x in "${paths[@]}"; do
        #cygwin-1.7 will behave weirdly if /h is mounted but the
        #texlive disk is not inserted
        [[ -e "$x" ]] && export PATH="$PATH":"$x"
    done
    PATH="${PATH:1}" #remove the beginning `:'
    unset SetPath
}

#Open Containing folder..
function oc()
{
    cygstart `which explorer.exe` /n,/select,\""`cygpath -alw \"$1\"`"\"
}

function cmd() 
{
    if [[ -z "$1" ]]; then
        of cmd.exe
    elif [[ -d "$1" ]]; then
        (cd "$1"; of cmd.exe)
    elif [[ -d "`dirname \"$1\"`" ]]; then
        (cd "`dirname \"$1\"`"; of cmd.exe)
    else 
        echo cmd: no such file or directory "$1"
    fi
}

function svn-info-clip()
{
    svn info "$1" |grep '^URL:'|grep svn:.* -o|tr -d '\r' > /dev/clipboard
}

function of()
{
    if which "$1" >/dev/null 2>&1; then
        if [[ "$1" == of ]]; then
            local file=`which cygstart`
        else
            local file="`which \"$1\"`"
        fi
        shift
        cygstart "$file" "$@"
    else
        cygstart "$@"
    fi
}


function svn-check()
{
    svn st --no-ignore|grep '^\?'|grep '\.cpp$\|\.h$\|\.c$' -i
}


function dict() 
{
    dict.exe -v 2>/dev/null "$@"|iconv -f UTF-8 -t GBK
}

function llocate() {
    locateEmacs.sh "$@"|sed -e 's/^.:/"/; s/$/"/'
}

function edit_1()
{
    if ! [[ -r "$1" ]]; then
        echo Error: "$1" is not readable
        return 1
    fi

    if ! [[ -w "$1" ]]; then
        echo Warning: "$1" is not writable
    fi
    local file="`cygpath -alwm \"$1\"`"
    
    (cd ~ && emacsedit.exe "$file" >/dev/null 2>&1)

}

function edit()
{
    for x in "$@"; do 
        edit_1 "$x"
    done
}

function lcd()
{
    if [[ -z "$1" ]]; then
        echo Usage: lcd softlink
        return
    fi

    linkTarget=`ls -l "$1"|sed -e 's/.*-> //'`
    if [[ ${linkTarget:0:1} == / ]]; then
        true #nothing to do
    elif [[ ${linkTarget:1:1} == ':' ]]; then #this is a windows pathname (`:' is a special char)
        true
    else
        linkTarget="`dirname \"$1\"`"/"$linkTarget"
    fi
    if [[ -d "$linkTarget" ]]; then
        cd "$linkTarget"
    else
        cd "`dirname \"$linkTarget\"`"
    fi
}

export PYTHON_INCLUDE='c:\python25\include'
export PYTHON_LIB='c:\python25\libs\python25.lib'
export ADBHOST=192.168.100.2
export ADB_HOST=192.168.100.2
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export CDPATH=.:~:/cygdrive

alias wpwd='cygpath -alw .; pwd|sed -e "s!/!.!g"; echo'
alias perl='/bin/perl'
alias or=regopen.py #open registry
alias mplayer="'/cygdrive/c/Program Files/MPlayer for Windows/MPlayer.exe'"
alias regrep.py='regrep.py 2>/dev/null'
alias ps='ps aux -W'
alias locate=llocate
alias pdfnup='cygexec pdfnup'
alias reboot=~/bin/reboot

if [[ -d /cygdrive/q ]]; then
   export HOME=/cygdrive/q
   SetPath
   return 0
else 
    export HOME="`/bin/cygpath -au \"$HOMEDRIVE\"\"$HOMEPATH\"`"
    SetPath
    return 1
fi

