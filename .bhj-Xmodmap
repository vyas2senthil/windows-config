keycode 108 = Super_R
keycode 66 = Control_L
keycode 37 = Caps_Lock
keysym Super_L = Super_R

clear lock
clear mod1
clear mod4
clear control

add mod1 = Alt_L
add control = Control_L Control_R
add lock = Caps_Lock
add mod4 = Super_R
