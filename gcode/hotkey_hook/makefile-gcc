# --------------------------------------------------------------------
# makefile for blackbox.exe - gcc (mingw)

BIN     = hotkey_hook.exe

RM      = rm
DEFINES =

COREOBJ = hotkey_hook.o from_bblean.o bb_exec.o

OBJ 	= $(COREOBJ) 

# --------------------------------------------------------------------

ifdef INSTDIR
all: $(INSTDIR)\$(BIN)
else
all: $(BIN)
endif

$(INSTDIR)\$(BIN): $(BIN)

clean:
	$(RM) -f $(OBJ) $(RES) $(BIN) $(EXP)


# --------------------------------------------------------------------
CC      = gcc.exe
CP      = g++.exe
CFLAGS  = -Os -Wall -fno-rtti -fno-exceptions -c $(DEFINES)
LFLAGS  = -mwindows -s
LIBS    = -lversion -lole32 -luuid -lcomctl32 -lcomdlg32 -lshell32 \
	-ladvapi32 -lstdc++

# --------------------------------------------------------------------

$(BIN): $(OBJ) makefile-gcc
	$(CC) $(LFLAGS) $(OBJ) $(LIBS) -o $(BIN)

depend.txt: $(patsubst %.o,%.cpp,$(OBJ))
	$(CC) -MM $^ >$@

# --------------------------------------------------------------------

%.o: %.c
	$(CC) $(CFLAGS) $< -o $@

%.o: %.cpp
	$(CP) $(CFLAGS) $< -o $@


# --------------------------------------------------------------------


## Local Variables: **
## mode: makefile **
## End: **
