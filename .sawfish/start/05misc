#!/bin/bash
echo sawfish starting sub programs
python3.1 ~/gcode/scim-cs/ime-py/ime-server.py&
if test -f ~/.offlineimaprc; then
    python2.6 ~/bin/windows/Imap4Monitor/Imap4Monitor.py&
fi

while true; do
    (
	cd ~/gcode/gmail-notify-1.6.1.1;
	GA_LABEL=/BigOne  ./notifier.py;
	sleep 5;
    )
done >~/.gmail-notifier.log 2>&1 &
qq
gnome-panel&

while true; do (cd ~/gcode/offline.wikipedia/mywiki; python manage.py runserver --noreload >>~/.offline-wiki.log 2>&1); sleep 2; done& 
download-today

command renew-xauth
killall syndaemon
syndaemon -i 1 -d
while true; do
    if ps aux|grep ssh|grep bhj@216 -q; 
    then
        true;
    else
        ssh -C2qN -D 8080 bhj@216.194.70.6; 
    fi
    sleep 2; 
done
