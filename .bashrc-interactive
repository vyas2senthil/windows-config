#!/bin/bash

. /etc/bash_completion
. ~/.bash_netcompletion

function cd_bhj () 
{
    history -s cd "$@"
    local oldpwd=`pwd`
    lcd "$@" && return $?
    test $# == 1 -o $# == 0 && builtin cd -P "$@" >/dev/null 2>&1 || cd_failed "$@"
    test "`pwd`" != "$oldpwd" && cd_record
    true
}

function my_select() 
{
    local y=1
    for x in "$@"; do 
        echo $y\) "$x" >/dev/tty;
        ((y++))
    done

    read -p "#?" NUM
    if [[ x"$NUM" = x || ! "$NUM" =~ ^[1-9][0-9]*$ ]] || (( "$NUM" > $# )); then
        NUM=1
    fi
    echo $NUM
}

function cd_failed() 
{
    local IFS=$'\n'
    dirs=( $(where "$@") )
    if test ${#dirs[@]} = 0; then
        echo 'Error: no such file or directory'
        return 1
    elif test ${#dirs[@]} = 1; then
        builtin cd ${dirs[0]}
    else 
        NUM=`my_select "${dirs[@]}"`
        ((NUM--))
        builtin cd "${dirs[$NUM]}"
        cd_record
        history -s cd "$@"
    fi
    return 0
}

function fcd() 
{
    local IFS=$'\n'
    dirs=( $(find . -type d -name "*$1*") )
    if test ${#dirs[@]} = 0; then
        echo 'Error: no such file or directory'
        return 1
    elif test ${#dirs[@]} = 1; then
        builtin cd ${dirs[0]}
    else 
        NUM=`my_select "${dirs[@]}"`
        ((NUM--))
        builtin cd "${dirs[$NUM]}"
        history -s cd "$@"
    fi
    cd_record
}

function rbcd()
{
    dirs=(`repo branches|perl -npe 's/.* in\b.//; s/,/ /g; s/ /\n/g'|sort -u`);
    NUM=`my_select "${dirs[@]}"`
    ((NUM--))
    cd_bhj "${dirs[$NUM]}"
}
alias cd=cd_bhj
